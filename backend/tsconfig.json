{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2016",
    "resolveJsonModule": true,
    "paths": {
      "@app/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "coverage",
    "dist",
    "node_modules"
  ]
}